@model RandomVariables.WebApplication.ViewModels.CalculatorPageViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-auto">
            <div class="list-group">
                @foreach (var distrName in Model.StandardDistributions)
                {
                    <button type="button" class="list-group-item list-group-item-action">@distrName</button>
                }
            </div>
        </div>
        <div class="col-md-auto">
            <div id="calculator">
                <div class="container">
                    <div class="row">
                        <div class="col" style="padding:0">
                            <!-- Screen and clear key -->
                            <div class="top">
                                <div class="screen"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8" style="padding: 0">
                            <div class="keys">
                                <!-- operators and other keys -->
                                <span>7</span>
                                <span>8</span>
                                <span>9</span>
                                <span class="operator">+</span>
                                <span>4</span>
                                <span>5</span>
                                <span>6</span>
                                <span class="operator">-</span>
                                <span>1</span>
                                <span>2</span>
                                <span>3</span>
                                <span class="operator">x</span>
                                <span>+/-</span>
                                <span>0</span>
                                <span>.</span>
                                <span class="operator">/</span>
                            </div>
                        </div>
                        <div class="col">
                            <span class="backspace"><i class="fas fa-backspace"></i></span>
                            <span class="clear">C</span>
                            <span class="eval">=</span>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
        <div class="col-md-auto">
            <div class="row">
                <div>
                    <canvas id="myChart1" style="height:260px; width:520px;"></canvas>
                </div>
            </div>
            <div class="row">
                <div>
                    <canvas id="myChart2" style="height:260px; width:520px;"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

