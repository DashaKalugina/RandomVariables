@model RandomVariables.WebApplication.ViewModels.CalculatorPageViewModel
@using Newtonsoft.Json;
@{
    ViewData["Title"] = "Home Page";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

<!-- Modal -->
<div class="modal fade" id="selectParametersModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div id="selectParametersDialog" class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="selectParametersModalLabel">Заполните параметры распределения</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="distrParametersContainer">
                jhkjhkhj
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="setParametersButton" onclick="AddDistributionToScreen(event)">Добавить</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-auto">
            <div class="list-group" style="font-size: 14px;margin-top: 105px;">
                @foreach (var keyValuePair in Model.ParametersByDistributionsName)
                {
                    <button type="button" class="addDistrButton list-group-item list-group-item-action" onclick="OpenSelectParametersDialog(event, '@JsonConvert.SerializeObject(keyValuePair.Value)', '@keyValuePair.Key')">@keyValuePair.Key</button>
                }
            </div>
        </div>
        <div class="col-md-auto">
            <div id="calculator">
                <div class="container">
                    <div class="row">
                        <div class="col" style="padding:0">
                            <!-- Screen and clear key -->
                            <div class="top">
                                @*<div class="screen"></div>*@
                                <textarea class="screen" style="height:130px; font-size:16px"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8" style="padding: 0">
                            <div class="keys">
                                <!-- operators and other keys -->
                                <span>(</span>
                                <span>)</span>
                                <span class="backspace" style="width: 98px;"><i class="fas fa-backspace"></i></span>
                                <span>7</span>
                                <span>8</span>
                                <span>9</span>
                                <span class="operator">+</span>
                                <span>4</span>
                                <span>5</span>
                                <span>6</span>
                                <span class="operator">-</span>
                                <span>1</span>
                                <span>2</span>
                                <span>3</span>
                                <span class="operator">x</span>
                                <span>+/-</span>
                                <span>0</span>
                                <span>.</span>
                                <span class="operator">/</span>
                            </div>
                        </div>
                        <div class="col">
                            @*<span class="backspace"><i class="fas fa-backspace"></i></span>*@
                            <span class="clear">C</span>
                            <span class="eval">=</span>
                        </div>
                    </div>
                </div>

            </div>
            <div style="margin-top: 30px; padding: 6px;">
                <label for="fileToUpload" style="font-size: 14px;">Загрузка пользовательского распределения</label>
            </div>
            <div class="form-inline" style="">
                <input name="fileToUpload" id="fileToUploadInputId" type="file" class="form-control" style="width:270px; margin:5px; padding: 5px; font-size:14px;" />
                <input type="button" value="Загрузить" onclick="UploadFile()" class="btn btn-primary" style="font-size: 14px;" />
            </div>
        </div>
        <div class="col-md-auto">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col">
                        <div id="pdfChartContainer" style="width: 450px; height: 360px;"></div>
                    </div>
                    <div class="col">
                        <select id="pdfTypeSelect">
                            <option value="area">Area</option>
                            <option value="column">Column</option>
                            <option value="jump-line">Jump Line</option>
                            <option value="line">Line</option>
                            <option value="marker">Marker</option>
                            <option value="spline-area">Spline Area</option>
                            <option value="spline">Spline</option>
                            <option value="step-area">Step Area</option>
                            <option value="step-line">Step Line</option>
                            <option value="stick">Stick</option>
                        </select>
                    </div>
                </div>
                <div class="row align-items-center">
                    <div class="col">
                        <div id="cdfChartContainer" style="width: 450px; height: 360px;"></div>
                    </div>
                    <div class="col">
                        <select id="cdfTypeSelect">
                            <option value="area">Area</option>
                            <option value="column">Column</option>
                            <option value="jump-line">Jump Line</option>
                            <option value="line">Line</option>
                            <option value="marker">Marker</option>
                            <option value="spline-area">Spline Area</option>
                            <option value="spline">Spline</option>
                            <option value="step-area">Step Area</option>
                            <option value="step-line">Step Line</option>
                            <option value="stick">Stick</option>
                        </select>
                    </div>
                </div>
            </div>
            @*<div class="row">
            <div>
                <canvas id="myChart1" style="height:300px; width:600px;"></canvas>
            </div>
        </div>*@
            @*<div class="row">
            <div>
                <canvas id="myChart2" style="height: 300px; width: 600px;"></canvas>
            </div>
        </div>*@
        </div>
    </div>
</div>



